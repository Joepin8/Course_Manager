<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ikpmd.westgeestoonk.course_manager.VakInfo"
    tools:layout_editor_absoluteY="81dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:minHeight="1050dp">

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="0dp"
            android:layout_height="209dp"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Vaktitel"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="27dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="EC"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="72dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Periode"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="118dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Toetsing"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="176dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Toetsmoment"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="226dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:paddingTop="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/VakTitel"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:lineSpacingExtra="18sp"
                    android:lines="2"
                    android:text="Vaktitel"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="27dp" />

                <TextView
                    android:id="@+id/EC"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="EC"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="72dp" />

                <TextView
                    android:id="@+id/Periode"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Periode"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="118dp" />

                <TextView
                    android:id="@+id/Toetsing"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Toetsing"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="176dp" />

                <TextView
                    android:id="@+id/ToetsMoment"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Toetsmoment"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="226dp" />

            </LinearLayout>
        </LinearLayout>

        <Spinner
            android:id="@+id/TekstCijfer"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="96dp"
            android:hapticFeedbackEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.672"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainLayout" />

        <EditText
            android:id="@+id/DecimaalCijfer"
            android:layout_width="149dp"
            android:layout_height="131dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainLayout" />

        <Button
            android:id="@+id/Opslaan"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="52dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:hapticFeedbackEnabled="true"
            android:onClick="SlaOp"
            android:text="Opslaan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DecimaalCijfer" />

        <EditText
            android:id="@+id/NotitieTekst"
            android:layout_width="0dp"
            android:layout_height="447dp"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="330dp"
            android:ems="10"
            android:gravity="top"
            android:hint="Vul hier een notitie in:"
            android:inputType="textMultiLine"
            android:shadowColor="#0000ff"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="1.5"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainLayout" />

        <Button
            android:id="@+id/NotitieOpslaan"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="261dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="452dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:hapticFeedbackEnabled="true"
            android:onClick="SlaOp"
            android:text="Notitie Opslaan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/NotitieTekst" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>